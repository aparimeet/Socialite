<h1>New Post</h1>
<%= form_for @post, html: { multipart: true } do |f| %>
	<% if @post.errors.any? %>
		<% @post.errors.full_messages.each do |msg| %>
			<div class="alert alert-danger"><%= msg %></div>
		<% end %>	
	<% end %>
		
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>

	<%= f.label :body %><br>
	<%= f.text_area :body %>
	<br>
	<%= f.label :image %><br>
	<%= f.file_field :image %>
	<br>
	<%= f.submit({:class => 'btn btn-primary'}) %>
<% end %>

