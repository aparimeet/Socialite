<h1>New Post</h1>
<%= form_for @post, html: { multipart: true } do |f| %>
	<% if @post.errors.any? %>
		<% @post.errors.full_messages.each do |msg| %>
			<div class="alert alert-danger"><%= msg %></div>
		<% end %>	
	<% end %>
		

	<%= form_for @post do |f| %>
		<%= f.label :image %>
		<%= f.file_field :image %>
		<br>

		<%= f.label :description %>
		<%= f.text_area :description %>
		<br> 

		<%= f.submit({:class => 'btn btn-primary'}) %>
	<% end %>
<% end %>


